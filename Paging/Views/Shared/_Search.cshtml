<form asp-controller="@Model.Controller" asp-action="@Model.Action" method="get">
    <div class="form-row">
        <div class="col-12 mb-3">
            <input name="search" value="@ViewBag.Search" type="text" placeholder="@Model.TextPlaceHolder" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="col-12 mb-3">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>